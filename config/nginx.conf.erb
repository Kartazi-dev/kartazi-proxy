worker_processes  2;
error_log /dev/stdout info;

daemon off;

events {
	worker_connections 256;
}

http {
	access_log /dev/stdout;
	server {
		listen <%= ENV["PORT"] %>;

		location /dev {
			proxy_pass <%= ENV["API_DEV"] %>;
		}

		location /dev/api {
			proxy_pass <%= ENV["API_DEV"] %>;
		}

		location /dev/swagger {
			proxy_pass <%= ENV["API_DEV"] %>;
		}

		if ($http_x_forwarded_proto != "https") {
			rewrite ^(.*)$ https://$host$1 permanent;
		}
	}
}
